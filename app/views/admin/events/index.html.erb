<%= link_to "New", new_admin_event_path %>

<table class="admin-table">
  <tr>
    <th>Date</th>
    <th>Start Time</th>
    <th>Finish Time</th>
    <th>Actions</th>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= formatted_date(event.date) %></td>
      <td><%= formatted_time(event.start_time) %></td>
      <td><%= formatted_time(event.finish_time) %></td>
      <td>
        <%= link_to "Edit", edit_admin_event_path(event) %>
        <%= link_to "Delete", admin_event_path(event), data: {confirm: "Are you sure you want to delete this?"}, method: :delete, class: "btn btn-small btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

